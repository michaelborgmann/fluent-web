extends layout

block content
  .row.banner
    .col-12
      h1= pageHeader.title
  .row
    .col-12.col-md-8
      form#createMessage(action="", method="post", role="form")

        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="type") Type
          .col-12.col-sm-10
            input#type.form-control(name="type")

        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="sender") Sender
          .col-12.col-sm-10
            input#sender.form-control(name="sender")

        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="target") Target
          .col-12.col-sm-10
            input#target.form-control(name="target")

        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="source") Source
          .col-12.col-sm-10
            input#source.form-control(name="source")

        .form-group.row
          label.col-10.col-sm-2.col-form-label(for="audio") Audio
          .col-12.col-sm-10
            input#audio.form-control(name="audio")

        button.btn.btn-primary.float-right Add Message
